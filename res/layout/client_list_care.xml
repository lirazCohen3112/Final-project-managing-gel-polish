<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginHorizontal="25dp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="315dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#78BCF1"
        app:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="#E3E5E8">

        </androidx.appcompat.widget.AppCompatImageView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_care_name"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/always_good"
            android:text="@string/app_name"
            android:textColor="#514065"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="98dp"
            android:paddingBottom="5dp"
            android:text="             explanation:"
            android:fontFamily="@font/always_good"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginTop="-63dp"
            android:layout_marginStart="-35dp"
            tools:ignore="MissingConstraints" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_care_explanation"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:text="@string/app_name"
            android:textColor="#E3E5E8"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="98dp"
            android:paddingBottom="5dp"
            android:text="    cost:"
            android:fontFamily="@font/always_good"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="-35dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_care_cost"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="32dp"
            android:text="@string/app_name"
            android:textColor="#E3E5E8"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_care_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="32dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_image"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/polish_image"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@id/card"
        android:src="@drawable/nail_polish"
        android:layout_marginStart="25dp"
        android:elevation="20dp"
        android:padding="2dp"/>


</RelativeLayout>