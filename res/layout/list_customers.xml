<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/image"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:scaleType="fitCenter"
    android:layout_marginTop="1dp"
    android:src="@drawable/prifile_pic"
    android:layout_marginStart="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp"
    android:contentDescription="@string/image_description" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:background="#070707"/>



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/list_LBL_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="@string/app_name"
        android:textSize="25dp"
        android:fontFamily="@font/always_good"
        android:textStyle="bold"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="45dp"
        android:paddingBottom="5dp"
        android:text="Email:"
        android:fontFamily="@font/always_good"
        android:textColor="#786A6A"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-80dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/list_LBL_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#4F5A63"
        android:text="@string/app_name"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="68dp"
        android:paddingBottom="5dp"
        android:text="             Phone Number:"
        android:fontFamily="@font/always_good"
        android:textColor="#786A6A"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginTop="-80dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/list_LBL_phoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#4F5A63"
        android:text="@string/app_name"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>