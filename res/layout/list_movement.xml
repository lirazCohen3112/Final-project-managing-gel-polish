<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginStart="30dp"
    android:layout_marginHorizontal="8dp"
    android:background="#3CFFFFFF"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#78BCF1"
        app:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="#E3E5E8">

        </androidx.appcompat.widget.AppCompatImageView>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/title_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_money" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_typeMovement"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:textSize="19dp"
            android:fontFamily="@font/always_good"
            android:textStyle="bold"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="70dp"
            android:paddingBottom="5dp"
            android:text="Size:"
            android:fontFamily="@font/always_good"
            android:textColor="#786A6A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-40dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_size"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="70dp"
            android:paddingBottom="5dp"
            android:text="description:"
            android:fontFamily="@font/always_good"
            android:textColor="#786A6A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginTop="-20dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_description"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginStart="190dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_image"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>




</RelativeLayout>