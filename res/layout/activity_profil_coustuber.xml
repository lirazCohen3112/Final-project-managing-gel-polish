<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4E8F8"
    tools:context=".businessManager.activities.customerProfileActivity">


    <ImageView
        android:id="@+id/user_imageview"
        android:layout_width="184dp"
        android:layout_height="161dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/prifile_pic" />

    <View
        android:layout_width="290dp"
        android:layout_height="4dp"
        android:background="#000000"
        android:layout_marginTop="290dp"
        android:layout_marginStart="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="172dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/table_records_LBL_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/always_good"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="24dp"
        android:text="@string/app_name"
        android:textColor="#514065"
        android:textSize="35sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/table_records_LBL_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="24dp"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/email_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_mail_black_24dp" />

    <ImageView
        android:id="@+id/phone_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_local_phone_black_24dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/table_records_LBL_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="360dp"
        android:layout_marginBottom="24dp"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="18sp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_alignParentTop="true"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/title_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/ic_icon_biz" />

    <ImageButton
        android:id="@+id/customer_LBL_Return_menu"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_right_arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/singUp_LBL_singUp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="@font/always_good"
        android:layout_gravity="center"
        android:layout_marginTop="400dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"
        android:text="Queue history" />

</RelativeLayout>